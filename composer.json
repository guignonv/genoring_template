{
    "name": "guignonv/genoring_template",
    "description": "GenoRing Drupal Composer template.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Valentin Guignon",
            "email": "guignonv@yahoo.fr"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "homepage": "https://github.com/guignonv/genoring_template",
    "support": {
        "issues": "https://github.com/guignonv/genoring_template/issues",
        "source": "https://github.com/guignonv/genoring_template"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "conflict": {
        "webflo/drupal-core-strict": "*",
        "drupal/drupal": "*"
    },
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.0",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-project-message": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drush/drush": "^12.5",
        "guignonv/genoring_distrib": "^1.0@dev"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "phpstan/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "cweagans/composer-patches": true
        },
        "sort-packages": true
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-types": [
            "npm-asset",
            "bower-asset"
        ],
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "enable-patching": true,
        "composer-exit-on-patch-failure": false
    }
}
